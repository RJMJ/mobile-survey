template(name="survey_admin")
  if fetched
    .survey-admin
      nav.navbar.navbar-default.survey-admin--nav
        .container-fluid-padded
          .navbar-header
            h2
              a(href="{{pathFor 'survey_admin_details' id=survey.id}}")= survey.attributes.title
          ul.nav.navbar-nav.navbar-right
            li(class="{{isActiveRoute 'survey_admin_details'}}")
              a.survey-admin--view-link(href="{{pathFor 'survey_admin_details' id=survey.id}}" data-page='details') Details
            li(class="{{isActiveRoute regex='survey_admin_forms|survey_admin_forms_new|survey_admin_form_details'}}")
              a.survey-admin--view-link(href="{{pathFor 'survey_admin_forms' id=survey.id}}" data-page='forms') Forms
            li(class="{{isActiveRoute 'survey_admin_users'}}")
              a.survey-admin--view-link(href="{{pathFor 'survey_admin_users' id=survey.id}}" data-page='users') Users

      .container-fluid-padded
        if isActiveRoute 'survey_admin_details'
          +survey_admin_details survey=survey

        else if isActiveRoute 'survey_admin_forms'
          +survey_admin_forms survey=survey

        else if isActiveRoute 'survey_admin_forms_edit'
          +survey_admin_forms_edit data

        else if isActiveRoute 'survey_admin_form_details'
          +survey_admin_form_details data

        else if isActiveRoute 'survey_admin_questions_edit'
          +survey_admin_questions_edit data

        else if isActiveRoute 'survey_admin_users'
          +survey_admin_users survey=survey

        else if isActiveRoute 'survey_admin_users_edit'
          +survey_admin_users_edit survey=survey
