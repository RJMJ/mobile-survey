template(name="survey_admin_forms")
  .survey-admin--content
    h3 Forms
      a(href="{{pathFor 'survey_admin_forms_edit' id=survey._id}}")#add-form.btn.btn-sm
        i.mdi.mdi-plus-circle
        | Add Form

    ul.list-group
      +sortable(
        items=forms
        sortField='order'
        handle='.sortable-handle'
        ghostClass='sortable-ghost')

        li.list-group-item.form-link
          span.sortable-handle
            i.mdi.mdi-drag
          a(href="{{pathFor 'survey_admin_form_details' id=../survey._id formId=_id}}")= name
