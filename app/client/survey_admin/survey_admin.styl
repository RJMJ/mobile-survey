.survey-admin
  h3
    font-size 1.2em

.survey-admin--nav
  background white
  border-bottom 3px solid $primary
  h2
    font-size 1.5em
    margin 0
    padding-top .7em

.survey-admin--content
  margin-top 15px

.create-form
  margin-bottom 20px

.form-details
  margin 20px 0

.form-link
  padding 0
  overflow hidden
  .sortable-handle
    position absolute
    height 100%
    width 40px
    margin 0
    i
      position absolute
      width 100%
      top 50%
      transform translate(0,-50%)
      text-align center
  a
    padding 15px 15px 15px 45px
    display block
    &:hover
      background #f9f9f9
      text-decoration none
