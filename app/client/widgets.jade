template(name="widget")
  .form-group
    +Template.dynamic template=widgetTemplateName

template(name="widget.inputText")
  label.control-label(for="form-#{form}-field-#{name}")= label
  if data.required
    |  *
  input.form-control(
    id="form-#{form}-field-#{name}"
    type='text'
    value=value
    name=data.name
    placeholder=data.placeholder
    maxlength=data.maxlength
    required=required
  )

template(name="widget.textArea")
  label.control-label(for="form-#{form}-field-#{name}")= label
  if data.required
    |  *
  textarea.form-control(
    id="form-#{form}-field-#{name}"
    name=data.name
    placeholder=data.placeholder
    maxlength=data.maxlength
    required=required
  )= value
