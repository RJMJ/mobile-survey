.basic-details
  display flex
  padding 2em 0
  border-bottom 1px solid $border-primary-l

.detail
  flex 1
  text-align center
  &:first-of-type
    padding-left 5%
  &:last-of-type
    padding-right 5%
  span
    display block
    font-size 3em
    font-weight 800
    line-height 1
    margin-bottom .1em
  h2
    text-transform uppercase
    font-size 1.25em
    font-weight 300
    margin 0
    color $d-gray
    letter-spacing .05em

.description
  padding 2em 1em
  text-align center

.menu
  display flex
  align-items center
  justify-content center

.menu-item
  margin 0 2em
  text-align center
  i
    margin-bottom .2em
    font-size 3em
    display block
