template(name="survey_users")
  +survey_users_header path='survey_user_edit' id=survey.id object='User' buttonAdd=true
  .main-content
    if fetched
      if users
        ul.list-group.users
          each users
            li.list-group-item
              span= email
              .actions
                button.btn.btn-danger.btn-sm.remove-user Remove from Survey
      else
        p This survey has no users
    else
     +loading

template(name="survey_users_header")
  .header-page
    .container-fluid-padded
      h3 Users
      if buttonAdd
        +buttonAdd path=path id=id object=object
