template(name="survey_users")
  .survey-admin--content
    h3 Users
      a#add-user.btn.btn-sm(
        href="{{pathFor 'survey_user_edit' id=survey.id}}")
        i.mdi.mdi-plus-circle
        | Add User

    if fetched
      if users
        ul.list-group.users
          each users
            li.list-group-item.form-link
              span= email
              .actions
                button.btn.btn-danger.btn-sm.remove-user Remove from Survey
      else
        p This survey has no users
    else
     +loading
