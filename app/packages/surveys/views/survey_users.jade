template(name="survey_users")
  .survey-admin--content
    h3 Users
      button#add-user.btn.btn-sm(
        href="{{pathFor 'survey_user_edit' id=survey.id}}"
        disabled="{{#if surveyActive}} disabled {{/if}}")
        i.mdi.mdi-plus-circle
        | Add User

    if fetched
      if users
        ul.list-group.users
          each users
            li.list-group-item.form-link
              span= email
      else
        p This survey has no users
