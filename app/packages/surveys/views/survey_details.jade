template(name="survey_details")
  .main-content
    .basic-details
      a.detail(href="{{pathFor 'forms' id=survey.id}}")
        .detail--info
          .info
            span.statistic=formCount
            h2 Forms
          .info
            span.statistic=questionCount
            h2 Questions
        span.btn.btn-primary.call-to-action-text
          if surveyIsActive
            | View Results
          else
            | Edit

      a.detail(href="{{pathFor 'participants' id=survey.id}}")
        .detail--info
          .info
            span.statistic=participantCount
            h2 Participants
        span.btn.btn-primary.call-to-action-text
          if surveyIsActive
            | View Results
          else
            | Edit

    .container-fluid-padded
      p.description=description

    if surveyIsActive
      +survey_details_active(
        survey=survey
        surveyDetails=surveyDetails
        surveyState=surveyState
        forms=forms)
    else
      +survey_details_pending(
        survey=survey
        surveyDetails=surveyDetails
        surveyState=surveyState
        forms=forms)
