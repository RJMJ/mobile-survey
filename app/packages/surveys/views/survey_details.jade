template(name="survey_details")
  .survey-admin--content
    h3.inline Details
    .survey--details
      if fetched
        p.description= survey.description
        button.btn.btn-primary.activate
          span(class='{{activateButtonClass}}').mdi
          span
            =activateButtonText
            | Survey
        if forms
          ul.forms.list-unstyled
            each forms
              li.form
                h4
                  span.trigger(class=trigger.type)
                  a(href="{{pathFor 'form_details' id=../survey.id formId=parseId}}")
                    span=title
                if questions
                  ul.questions.list-unstyled
                    each questions
                      li.question
                        span.question-type(class=type)
                        a(href="{{pathFor 'questions_edit' id=../../survey.id formId=../parseId questionId=parseId}}")
                          span=text
        else
          p This survey currently has no forms.
      else
        .fa.fa-spinner.fa-pulse.fa-3x.fa-fw.margin-bottom
