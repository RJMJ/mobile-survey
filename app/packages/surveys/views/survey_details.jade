template(name="survey_details")
  .main-content
    .basic-details
      .detail
        .detail--info
          .info
            span.statistic=formCount
            h2 Forms
          .info
            span.statistic=questionCount
            h2 Questions
        .detail--actions
          unless surveyIsActive
            .action
              a.btn.btn-primary.call-to-action-text(href="{{pathFor 'form_new' id=survey.id}}")
                | Add New Form
          .action
            a.btn.btn-primary.call-to-action-text(href="{{pathFor 'forms' id=survey.id}}")
              if surveyIsActive
                | View Results
              else
                | Edit

      .detail
        .detail--info
          .info
            span.statistic=participantCount
            h2 Participants
        .detail--actions
          unless surveyIsActive
            .action
              a.btn.btn-primary.call-to-action-text(href="{{pathFor 'participants_edit' id=survey.id}}")
                | Add New Participant

          .action
            a.btn.btn-primary.call-to-action-text(href="{{pathFor 'participants' id=survey.id}}")
              if surveyIsActive
                | View Results
              else
                | Edit

    .container-fluid-padded
      p.description=description

    if surveyIsActive
      +survey_details_active(
        survey=survey
        surveyDetails=surveyDetails
        surveyState=surveyState
        forms=forms)
    else
      +survey_details_pending(
        survey=survey
        surveyDetails=surveyDetails
        surveyState=surveyState
        forms=forms)
