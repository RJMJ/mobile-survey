template(name="participant_results")
  .participants-results
    .participants-results--content
      +list_flank(
        name='Participants'
        collection=participants
        key='username'
        selectedId=participantId)
      .participants-results--results
        if participantSelected
          h1=participant.username
          +survey_results(
            participant=selectedParticipant
            survey=survey)
        else
          p Select a user to see results
