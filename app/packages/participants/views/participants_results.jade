template(name="participant_results")
  .results
    .results--content
      +list_flank(
        collections=collections
        selected=participantId
        selectMultiple=false
        location='left')
      .results--details
        if hasSubmissions
          if participantSelected
            h2.user=username
            if formSelected
              +survey_results(
                participant=selectedParticipant
                selectedFormIds=selectedFormIds
                survey=survey)
            else
              .centered.info-text
                p Select a form to see results
          else
            .centered.info-text
              p Select a user to see results
        else
          .centered.info-text
            p Currently no users have submitted forms

      +list_flank(
        collections=formCollection
        selected=selectedFormIds
        selectMultiple=true
        location='right')
