template(name="participants")
  +participants_header path='participants_edit' id=survey.id object='Participant' buttonAdd=true
  .main-content
    if fetched
      if users.count
        ul.list-group.users
          each users
            li.list-group-item
              span= email
              .actions
                button.btn.btn-danger.btn-sm.remove-user Remove from Survey
      else
        .container-fluid-padded.space-top-2
          p This survey currently has no participants.
    else
     +loading

template(name="participants_header")
  .header-page
    .container-fluid-padded
      h3 Participants
      if buttonAdd
        +buttonAdd path=path id=id object=object
