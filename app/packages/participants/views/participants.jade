template(name="participants")
  unless surveyIsActive
    +participants_header path='participants_edit' id=survey.id object='Participant' buttonAdd=true
  .main-content.active-content
    if fetched
      if surveyIsActive
        +participant_results(
          participants=participants
          survey=survey
          forms=forms)
      else
        +participant_list(
          participants=participants
          survey=survey)
    else
     +loading
