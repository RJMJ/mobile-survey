.results
  position relative
  height 100%

.results--content
  display flex
  align-items stretch
  min-height 100%

.results--list
  flex 1
  margin 0
  border-right 1px solid $primary-light
  &.right
    border-left 2px solid $primary-light
    border-right 0

.results--details
  flex 4
  overflow-x scroll
  .user
    padding-top .75em
    padding-bottom .75em
    padding-left 5%
    margin 0
    font-weight 600
    background-color lighten($border-primary-l, 10%)
    border-bottom 1px solid $border-primary-l
    line-height 1em
    font-size 1em
