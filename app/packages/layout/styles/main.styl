.container-fluid-padded
  padding 0 5%

.sortable-handle
  cursor move
  font-size 2em
  margin-right .1em
  color #999

.sortable-ghost
  background #f9f9f9
  box-shadow inset 0 0 5px rgba(0,0,0,.05)

.list-group-item
  span
    vertical-align middle

.navbar
  margin-bottom 0
  padding 0
  border-radius 0

.navbar-default
  margin 0

.navbar-brand
  padding-left 0

.logo
  width 150px
  background url(../images/logo.svg) no-repeat
  text-indent -9999px
  margin 0

.btn-back
  font-size 1.75em
  color #999
  transition transform .2s
  &:hover
    color #333
    transform scale(1.1)
.inline
  display: inline
