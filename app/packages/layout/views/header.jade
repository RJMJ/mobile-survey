template(name="header")
  nav.navbar.header-primary
    .container-fluid-padded
      .navbar-header
        button.navbar-toggle.collapsed(
          type='button'
          data-toggle='collapse'
          data-target='#menu'
          aria-expanded='false')
          span.sr-only Toggle navigation
          i.fa.fa-bars
        a.logo(href="/")
          h1 Good Question
      .collapse.navbar-collapse#menu
        ul.nav.navbar-nav.navbar-right.navbar-primary
          li(class="{{isActiveRoute 'surveys'}}")
            a(href="{{pathFor 'surveys'}}") Surveys
          li(class="{{isActiveRoute 'signup'}}")
            a(href="{{pathFor 'signup'}}") Admins
          li
            a#logout(href="/logout")
              i.fa.fa-sign-out
