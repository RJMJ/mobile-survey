template(name="signup")
  .container
    form.form-signin
      label.sr-only(for="inputEmail") Email
      input#inputEmail.form-control(type="email" name="username" placeholder="Email" required)
      label.sr-only(for="inputPassword") Password
      input#inputPassword.form-control(type="password" name="password" placeholder="Password" required)
      button.btn.btn-lg.btn-primary.btn-block(type="submit") Add New Admin
