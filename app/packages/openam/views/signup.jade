template(name="signup")
  .container
    .row
      .col-sm-4
        h2 Add an admin
        form
          fieldset.form-group
            label(for="inputEmail") Email address
            input#inputEmail.form-control(type="email" name="username" placeholder="Enter email" required)
            small.text-muted Will serve as a user name.
          fieldset.form-group
            label(for="inputPassword") Password
            input#inputPassword.form-control(type="password" name="password" required)
            small.text-muted Choose a strong password.
          button.btn.btn-primary(type="submit")
            if isSigningUp
              +loading inline=true
            | Submit
