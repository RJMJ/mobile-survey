template(name="login")
  .container
    .row
      .col-md-6.col-lg-6.col-md-offset-3.col-lg-offset-3
        form#form-signin
          h2.form-signin-heading Please sign in

          .form-group
            label.sr-only(for="email") Email address
            input#email.form-control(type="email" name="username" placeholder="Email" required autofocus)
            .help-block.with-errors
          .form-group
            label.sr-only(for="password") Password
            input#password.form-control(type="password" name="password" placeholder="Password" required)
            .help-block.with-errors

          .checkbox
            label
              input(type="checkbox" value="remember-me")
              | Remember me

          button.btn.btn-lg.btn-primary.btn-block(type="submit") Sign in
