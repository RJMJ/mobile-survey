template(name="login")
  .container
    form.form-signin
      h2.form-signin-heading Please sign in
      label.sr-only(for="inputEmail") Email address
      input#inputEmail.form-control(type="email" name="username" placeholder="Email" required autofocus)
      label.sr-only(for="inputPassword") Password
      input#inputPassword.form-control(type="password" name="password" placeholder="Password" required)
      .checkbox
        label
          input(type="checkbox" value="remember-me")
          | Remember me
      button.btn.btn-lg.btn-primary.btn-block(
        type="submit"
        disabled="{{#if isLoggingIn}} disabled {{/if}}")
        if isLoggingIn
          +loading inline=true
        | Sign in
