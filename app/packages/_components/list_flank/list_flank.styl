@import '{gq:base-styles}/variables'

.list-flank--item
  cursor pointer
  padding .75em 2.5em .75em 25%
  position relative
  border-bottom 1px solid $border-primary-l
  font-size .9em
  &:hover
    background lighten($border-primary-l, 70%)
  &::after
    position absolute
    right 1em
    top 50%
    transform translate(0, -50%)
    content '\f105'
    font-family 'FontAwesome'
    color $primary-light
  &.selected
    background lighten($border-primary-l, 30%)
