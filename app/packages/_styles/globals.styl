@import '{gq:base-styles}/variables'

html
body
  position relative
  min-height 100%

body
  font-family $body-font

a
  color $highlight
  &:hover
  &:focus
  &:hover:focus
    color darken($highlight, 20%)
    text-decoration none

.actions
  position absolute
  right 5%
  top 50%
  transform translate(0, -50%)
  .action
    display inline-block
    margin-right 5px
    &:last-of-type
      margin 0
    &:hover
      cursor pointer

.main-content
  position relative
  height 100vh

.centered
  text-align center

.info-text
  font-size 1.2em
  color $d-gray
  margin-top 2em
  font-weight 300

.separator
  width 30%
  margin 10px auto
  border-bottom 1px solid $border-primary-l
  &.wide
    width 60%
  &.full-width
    width 100%

.minor-heading
  background $ll-gray
  padding-top 1em
  padding-bottom 1em
  margin-bottom 20px
  h4
    margin 0
    font-weight 600
  i
    &.left
      margin-right 5px
