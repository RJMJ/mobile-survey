@import '{gq:base-styles}/variables'

html
body
  position relative
  min-height 100%

body
  font-family $body-font

.actions
  position absolute
  right 5%
  top 50%
  transform translate(0, -50%)
  .action
    display inline-block
    margin-right 5px
    &:last-of-type
      margin 0
    &:hover
      cursor pointer

  .delete
    &:hover
      color white

.btn-danger
  color $body-text
  background none
  border-color $delete
  &:hover
    background @border-color

.main-content
  position relative
  height 100vh
