@import '{gq:base-styles}/variables'

html
body
  position relative
  min-height 100%

body
  font-family $body-font

a
  color $highlight
  &:hover
  &:focus
  &:hover:focus
    color darken($highlight, 20%)
    text-decoration none

.actions
  position absolute
  right 5%
  top 50%
  transform translate(0, -50%)
  .action
    display inline-block
    margin-right 5px
    &:last-of-type
      margin 0
    &:hover
      cursor pointer

  .delete
    &:hover
      color white

.btn-danger
  color $body-text
  background none
  border-color $delete
  &:hover
    background @border-color

.main-content
  position relative
  height 100vh

.centered
  text-align center

.info-text
  font-size 1.2em
  color $d-gray
  margin-top 2em
  font-weight 300
