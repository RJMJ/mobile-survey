.form-link
  .delete
  .edit
    padding 5px 10px
  .edit
    color #666


.actions
  position absolute
  right 15px
  top 50%
  transform translate(0, -50%)
  .action
    display inline-block
    margin-right 5px
    &:last-of-type
      margin 0
    &:hover
      cursor pointer

  .delete
    &:hover
      color #D9534F
