.list-group
  border-radius 0
  border-top 0

.list-group-item
  padding 0 5%
  border-color $border-primary
  overflow hidden
  &:first-child
    border-top 0
  &:first-child
    border-radius 0
  span
    vertical-align middle
  &:hover
    background-color $ll-gray
  &.with-handle
    a
      padding-left 25px
  a
  > span
    padding 15px 0
    display block
    color $body-text
    &:hover
      background $ll-gray
      text-decoration none
  &.read-only
    padding 0
    .text
      padding-left 5%
    .sortable-handle
    .text
      &:hover
        background none
    .sortable-handle
      left 2%
    &:hover
      background none


.sortable-handle
  position absolute
  height 100%
  width 40px
  margin 0
  cursor move
  font-size 2em
  margin-right .1em
  color $d-gray
  margin-left -15px
  i
    position absolute
    width 100%
    top 50%
    transform translate(0,-50%)
    text-align center

.sortable-ghost
  background $ll-gray
  box-shadow inset 0 0 5px rgba(0,0,0,.05)
  
.list-group-item a.action.edit-form
    padding 7px 10px
    margin-right 5px
