.statistic
  display block
  font-size 3em
  font-weight 800
  color $primary
  line-height 1.5
  &.minor
    color $d-gray
    font-size 1.5em
    font-weight 600
  &.major
    font-size 1.75em
    margin-bottom .25em
  &.minimal
    font-size 1.25em
    font-weight 400
    color $d-gray

@media(max-width:1200px)
  .statistic
    font-size 2em
    &.minor
      font-size 1.25em
    &.major
      font-size 1.5em
    &.minimal
      font-size 1em

.question-results
  margin-bottom 20px
  h5
    font-weight 300
    font-size 1.25em
    text-transform uppercase
    color $dd-gray
  i
    @extend .statistic
  i
    font-weight 300

.question-results--title
  padding 5px 10px
  background lighten($border-primary-l, 50%)

.question-results--details
  display flex

.question-results--basic-info
  flex 1
  min-width 150px
  max-width 200px
  border-right 2px solid $border-primary-l

.basic-info--item
  padding 20px 10px
  text-align center
  border-bottom 1px solid $border-primary-l
  &:last-of-type
    border 0

.question-results--summary
  display flex
  flex 3
  padding 25px
  &.centered
    align-items center
    text-align center
  &.full-width
    flex-direction column

.summary-items
  flex 1
  border-right 1px solid $border-primary-l
  padding 0 1em
  &:last-of-type
    border 0
  &.left
    text-align left
  .choice
    display flex
    padding-bottom .5em
    padding-top .5em
    padding-left 2em
    border-bottom 1px solid $border-primary-l
    &:last-of-type
      border 0
    &:nth-of-type(odd)
      background lighten($border-primary-l, 70%)
    > span
    .result
      flex 1
    .result
      margin-left 2em
    span
      font-size 1em
      &:first-of-type
        font-weight 600
    .result
      span
        &:nth-of-type(2)
          margin-left .5em
          color $m-gray


.summary-item
  margin-bottom 40px
  &:last-of-type
    margin 0
    h5
      margin-bottom 0
  &.full-width
    max-width 70%
  .date
    display block
    font-style italic
    color $d-gray
