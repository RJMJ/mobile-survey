.statistic
  display block
  font-size 3em
  font-weight 800
  color $primary
  line-height 1
  &.minor
    color $d-gray
    font-size 1.5em
    font-weight 600
  &.major
    font-size 1.75em
    margin-bottom .25em
  &.minimal
    font-size 1.25em
    font-weight 400
    color $d-gray

.question-results
  margin-bottom 20px
  h5
    font-weight 300
    font-size 1.25em
    text-transform uppercase
    color $dd-gray
  i
    @extend .statistic
  i
    font-weight 300

.separator
  width 30%
  margin 10px auto
  border-bottom 1px solid $border-primary-l
  &.wide
    width 60%
  &.full-width
    width 100%

.question-results--title
  padding 5px 10px
  background lighten($border-primary-l, 50%)

.question-results--details
  display flex

.question-results--basic-info
  flex 1
  min-width 300px
  border-right 2px solid $border-primary-l

.basic-info--item
  padding 20px 10px
  text-align center
  border-bottom 1px solid $border-primary-l
  &:last-of-type
    border 0

.question-results--summary
  display flex
  flex 3
  padding 35px
  align-items center
  text-align center

.summary-items
  flex 1
  border-right 1px solid $border-primary-l
  &:last-of-type
    border 0

.summary-item
  margin-bottom 40px
  &:last-of-type
    margin 0
    h5
      margin-bottom 0
