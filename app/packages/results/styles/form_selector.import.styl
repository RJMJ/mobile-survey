.form-selector--wrapper
  background $border-primary-l

.form-selector--container
  padding 20px 0
  margin-top -3px
  margin-bottom 30px

.form-selector--form
  max-width 200px
  float left
  h2
    font-size 1.2em

.form-selector-link
  color lighten($primary, 20%)
  margin 10px
  cursor pointer
  &:first-of-type
    margin-left 0
  &:hover
    color darken($secondary-dark, 20%)
