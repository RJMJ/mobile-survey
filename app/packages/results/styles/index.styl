@import '{gq:base-styles}/variables'

@import 'tables.import'
@import 'form_selector.import'
@import 'question_results.import'
@import 'highcharts.import'

.form-selector
  margin-bottom 30px

.form-results
  margin-bottom 65px
  padding 15px
  min-width 800px

.form-results--header
  background white
  padding 10px 5%
  right 0
  h2
    font-size 1.25em
    color $primary
    font-weight 800
    margin 0
  h2
  .trigger-details
    display inline-block
    vertical-align middle

  .trigger-details
    margin-left 10px
    i
      font-size 1.5em
      margin-right 5px
    i
    span
      vertical-align middle
    span
      font-weight 600

.form-results--result
  margin-bottom 50px
  h3
    font-weight 600
    margin-top 0

.no-answer
  color $m-gray

.no-submissions
  padding 8px
  line-height 1.42857143
  background lighten($warning, 50%)
  h4
    font-weight 600
    font-size 1.2em
