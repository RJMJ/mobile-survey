@import '{gq:base-styles}/variables'

select[multiple]
  width 100%
  height 140px
  margin-bottom 20px

.table
  overflow scroll
  padding-left 5%
  padding-right 5%
  border-bottom 1px solid $border-primary-l

  thead
    background lighten($l-gray, 20%)
    border-bottom 1px solid $primary-light

  > tbody > tr > td
  > thead > tr > td
  > thead > tr > th
    border-bottom 0
    border-top 0

  tr
    td
    th
      &:first-child
        padding-left 5%
      &:last-child
        padding-right 5%

  > tr
    padding-left 5%
    padding-right 5%
    &:first-of-type
      border-top 2px solid $border-primary-l

  th
    border-bottom 0

  td
    width 200px
    // max-width 100px

  .question
    background $ll-gray

  .question--text
    font-weight 600

  .cell-icon
    color $primary-light

  th
  .answer
    padding-left 20px
    border-right 1px solid $primary-light

  .answer
    padding-top 20px
    padding-bottom 20px
    border-color $border-primary-l

.form-selector
  margin-bottom 30px

.form-results
  margin-bottom 65px

.form-results--header
  margin-bottom 10px
  h2
    font-size 1.75em
    color $primary
    font-weight 800
    margin 0
  h2
  .trigger-details
    display inline-block
    vertical-align middle

  .trigger-details
    margin-left 10px
    i
      font-size 1.5em
      margin-right 5px
    i
    span
      vertical-align middle
    span
      font-weight 600

.no-answer
  color $m-gray

.no-submissions
  padding 8px
  line-height 1.42857143
  background lighten($warning, 50%)
  h4
    font-weight 600
    font-size 1.2em

.form-selector--wrapper
  background $border-primary-l

.form-selector--container
  padding 20px 0
  margin-top -3px
  margin-bottom 30px

.form-selector--form
  max-width 200px
  float left
  h2
    font-size 1.2em
.form-selector-link
  color lighten($primary, 20%)
  margin 10px
  cursor pointer
  &:first-of-type
    margin-left 0
  &:hover
    color darken($secondary-dark, 20%)

.floatThead-container
  padding 0 !important // Overiding inline styles injected by plugin

.floatThead-wrapper
  .table
    table-layout auto !important // Overiding inline styles injected by plugin
