template(name="basic_results_info")
  .question-results--basic-info
    .basic-info--item
      +type_icon type=type
    if hasRange
      .basic-info--item(class="{{#if longContent}} long-content {{/if}}")
        span.statistic
          span=min
          span.through
          span=max
        h5 Range
    .basic-info--item
      span.statistic #{participation.percentage}%
      .separator
      h5 Participation
      .separator
      span.statistic.minimal #{participation.count} of #{participation.total} participants

template(name="type_icon")
  i.fa(class="fa-#{icon}")
  h5=formatQuestionType
