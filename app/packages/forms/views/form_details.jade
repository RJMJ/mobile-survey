template(name="form_details")
  .form
    if fetched
      +form_header(
        path='forms'
        id=survey.id
        surveyState=surveyState
        classNames='small'
        form=form
        survey=survey
        showEdit=true)
      .main-content
        .container-fluid-padded
          .form--details
            .row
              unless surveyIsActive
                .col-md-4
                  +question_details_edit form=form questions=questionsCollection
              .col-md-8
                +questions(
                  form=form
                  survey=survey
                  surveyState=surveyState
                  questions=questionsCollection)
    else
     +loading

template(name="form_header")
  .header-page
    .container-fluid-padded
      +buttonBack path=path id=id fromId=form.id classNames=classNames
      if form
        h3=form.attributes.title
        .header--actions
          unless surveyIsActive
            if showEdit
              a.btn.btn-default.btn-sm(href="{{pathFor 'form_edit' id=survey.id formId=form.id}}") Edit
            button.btn.btn-danger.btn-sm.delete.delete-form Delete
      else
        h3 New Form
