template(name="form_details")
  .survey-admin--content
    .form
      if fetched
        .form--header
          a.btn-back(href="{{pathFor 'forms' id=survey.id }}")
            i.mdi.mdi-arrow-left-bold-circle-outline
          h4=form.attributes.title
          button.btn.btn-default(
            disabled="{{#if surveyActive}} disabled {{/if}}"
            href="#{formId}/edit") Edit
          button.btn.btn-danger.delete.delete-form(
            disabled="{{#if surveyActive}} disabled {{/if}}") Delete
        .form--details
          .row
            unless surveyActive
              .col-md-4
                +questions_add form=form questions=questionsCollection
            .col-md-8
              +questions form=form survey=survey questions=questionsCollection
