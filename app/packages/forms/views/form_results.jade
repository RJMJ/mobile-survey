template(name="form_results")
  .results
    .results--content
      +list_flank(
        collections=formCollection
        selected=selectedFormIds
        selectMultiple=true
        location='left'
        lastClickedItemId=lastClickedFormId)
      .results--details
        .form-results
          each forms
            .form-results--result
              h3=title
              if fetched
                +form_results_detail(
                  form=this
                  questions=questions
                  submissions=submissions)
              else
                +loading
