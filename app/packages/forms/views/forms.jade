template(name="forms")
  .survey-admin--content
    h3 Forms
      unless surveyIsActive
        a#add-form.btn.btn-sm(
          href="{{pathFor 'form_edit' id=survey.id}}")
          i.mdi.mdi-plus-circle
          | Add Form

    if fetched
      if hasForms
        ul.list-group#formList
          each forms
            li.list-group-item.form-link(data-id=objectId)
              span.sortable-handle
                i.mdi.mdi-drag
              a(href="{{pathFor 'form_details' id=surveyId formId=objectId}}")=title
              .actions
                unless surveyIsActive
                  button.btn.btn-default.action.edit(href="forms/#{objectId}/edit")
                    | Edit
                  button.btn.btn-danger.action.delete.delete-form
                    | Delete
      else
        p This survey has no forms
    else
     +loading
