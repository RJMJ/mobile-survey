template(name="forms")
  unless surveyIsActive
    .header-page
      .container-fluid-padded
        h3 Forms
        unless surveyIsActive
          +buttonAdd path='form_new' id=survey.id object='Form'

  .main-content
    if fetched
      if surveyIsActive
        +form_results(survey=survey forms=forms)
      else
        +form_list(survey=survey surveyState=surveyState forms=forms)
    else
     +loading
