@import '{gq:base-styles}/variables'

.choice-container
  display block
  position relative
  margin-bottom 10px
  .delete-choice
    font-size 20px
    position absolute
    right 10px
    top 5px
    color $l-gray

.btn-grid
  border 1px solid transparent
  border-radius 3px
  .btn
    padding 5px
    width 90px
    height 50px
    margin 5px
    white-space normal

.has-error
  .btn-grid
    border-color $deny

label
  display block
