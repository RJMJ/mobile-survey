template(name="questions")
  .panel.panel-default
    .panel-heading
      h4 Questions
    if fetched
      if hasQuestions
        ul.list-group#questionList
          each questions
            li.list-group-item.question-link(
              data-id=objectId
              class="{{#if surveyIsActive}} read-only {{else}} with-handle {{/if}}")
              span.sortable-handle
                i.mdi.mdi-drag
              if surveyIsActive
                span.text= text
              else
                a(href="{{pathFor 'question_details' id=surveyId formId=formId questionId=objectId}}")= text

              .actions
                unless surveyIsActive
                  .action.delete-question.warning(data-id=objectId)
                    i.mdi.mdi-delete
      else
        .panel-body
          p No questions specified
    else
     +loading classes='small space-top'
