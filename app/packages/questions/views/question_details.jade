template(name="question_details")
  if fetched
    +form_header(
      path='forms'
      survey=survey
      surveyState=surveyState
      classNames='small'
      form=form
      showEdit=true)
  .main-content
    if fetched
      if surveyIsActive
        h4=text
      else
        +question_details_edit(
          surveyId=survey.id
          form=form
          question=question
          choices=choices
          surveyState=surveyState
          type=type)
    else
      +loading
